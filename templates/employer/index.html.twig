{% extends 'base.html.twig' %}

{% block title %}Hello EmployerController!{% endblock %}

{% block heading_h1 %}
    liste des employés
{% endblock %}
{% block heading_btn %}
    <a href="#"
       class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                class="fas fa-plus fa-sm text-white-50"></i> Ajouter
    </a>
{% endblock %}

{% block content %}
    {{ dump(users) }}
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>UserName</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Dernière connexion</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.username }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ dump(user.roles) }}</td>
                            <td>{{ (user.roles ?  'activer' : 'désactiver') }}</td>
                            {#                            <td>{{ user.lastLogin|date('d/m/Y') }}</td>#}
                            <td>{{ user.lastLogin|localizeddate('full', 'none', null, null) }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}